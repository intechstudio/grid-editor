{
  "name": "grid_editor",
  "version": "1.2.16",
  "main": "./src/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/intechstudio/grid-editor.git"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@rollup/plugin-dynamic-import-vars": "^1.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-replace": "^3.0.1",
    "autoprefixer": "^10.2.5",
    "chai": "^4.3.4",
    "chokidar": "^3.4.3",
    "cross-env": "^7.0.2",
    "dotenv": "^14.2.0",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0",
    "electron-rebuild": "^2.3.5",
    "mocha": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-load-config": "^2.1.2",
    "rollup": "^2.44.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^5.3.1",
    "svelte": "^3.29.4",
    "svelte-grid": "^1.11.2",
    "svelte-preprocess": "^4.7.0",
    "tailwindcss": "^2.0.4"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.18.0",
    "@codemirror/lang-javascript": "^0.18.0",
    "@codemirror/legacy-modes": "^0.18.0",
    "@codemirror/stream-parser": "^0.18.1",
    "@codemirror/tooltip": "^0.18.4",
    "@influxdata/influxdb-client": "^1.21.0",
    "@sveltejs/pancake": "0.0.16",
    "active-win": "^7.6.1",
    "adm-zip": "^0.5.9",
    "body-parser": "^1.19.0",
    "detect-active-title": "^1.0.1",
    "electron-dl": "^3.3.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "eslint": "^7.23.0",
    "fs-extra": "^10.0.0",
    "lezer-generator": "^0.13.3",
    "luamin": "^1.0.4",
    "luaparse": "^0.3.0",
    "node-disk-info": "^1.3.0",
    "panzoom": "^9.3.0",
    "polka": "^0.5.2",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "serialport": "^9.0.7",
    "sirv-cli": "^0.4.6",
    "universal-analytics": "^0.4.23",
    "uuid": "^8.3.2",
    "ws": "^7.4.6"
  },
  "build": {
    "asar": true,
    "appId": "com.Grid-Editor.app",
    "productName": "Grid Editor",
    "copyright": "Copyright Â© 2022 Intech Studio Ltd.",
    "directories": {
      "output": "dist/"
    },
    "extraResources": "src/app/elements/config-block/*",
    "dmg": {
      "sign": false
    },
    "afterSign": "build/notarize.js",
    "linux": {
      "artifactName": "${name}-Setup-${version}-${env.MODE}.${ext}"
    },
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "IntechStudioDev",
          "repo": "grid-editor"
        }
      ],
      "artifactName": "${name}-Setup-${version}-${env.MODE}.${ext}",
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "artifactName": "${name}-Setup-${version}-${env.MODE}.${ext}",
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  },
  "scripts": {
    "e:builder": "cross-env NODE_ENV=production NOTARIZE=true MODE=release electron-builder --publish onTagOrDraft",
    "e:builder:nightly": "cross-env NODE_ENV=production NOTARIZE=true MODE=nightly electron-builder --publish onTagOrDraft",
    "e:builder:local": "cross-env NODE_ENV=production MODE=nightly electron-builder --publish never",
    "export": "run-s s:build e:builder",
    "export:nightly": "run-s s:build e:builder:nightly",
    "rebuild": "./node_modules/.bin/electron-rebuild.cmd",
    "export:local": "run-s s:build e:builder:local",
    "s:build": "cross-env NODE_ENV=production rollup -c",
    "s:build:local": "cross-env NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "test": "mocha",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev --host 0.0.0.0",
    "electron": "run-s build pure-electron",
    "postinstall": "electron-builder install-app-deps && electron-rebuild --module-dir ./",
    "pure-electron": "electron .",
    "electron-dev": "run-p dev pure-electron-dev",
    "pure-electron-dev": "cross-env DEBUG=universal-analytics NODE_ENV=development electron ."
  }
}
