{
  "name": "grid-editor",
  "version": "1.2.28",
  "main": "./src/electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/intechstudio/grid-editor.git"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@sveltejs/vite-plugin-svelte": "^1.0.9",
    "autoprefixer": "^10.4.12",
    "chai": "^4.3.4",
    "chokidar": "^3.4.3",
    "cross-env": "^7.0.2",
    "dotenv": "^14.2.0",
    "electron": "^21.2.0",
    "electron-builder": "^24.0.0-alpha.2",
    "mocha": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-load-config": "^4.0.1",
    "rollup-plugin-copy": "^3.4.0",
    "svelte": "^3.29.4",
    "svelte-grid": "^1.11.2",
    "svelte-preprocess": "^4.7.0",
    "tailwindcss": "^3.1.8",
    "vite": "^3.1.8",
    "vite-plugin-monaco-editor": "^1.1.0"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.31.0",
    "active-win": "^7.7.2",
    "adm-zip": "^0.5.9",
    "detect-active-title": "^1.0.1",
    "discord.js": "^13.6.0",
    "electron-dl": "^3.4.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "eslint": "^7.23.0",
    "fs-extra": "^10.0.0",
    "googleapis": "^100.0.0",
    "luaparse": "^0.3.0",
    "monaco-editor": "^0.34.0",
    "node-disk-info": "^1.3.0",
    "node-fetch": "^2.6.7",
    "panzoom": "^9.3.0",
    "simple-discord-webhooks": "^1.1.1",
    "svelte-watch-resize": "^1.0.3",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0",
    "ws": "^7.5.8"
  },
  "build": {
    "asar": true,
    "appId": "intechstudio.grid-editor.app",
    "productName": "Grid Editor",
    "copyright": "Copyright Â© 2022 Intech Studio Ltd.",
    "directories": {
      "output": "dist/"
    },
    "extraResources": "src/renderer/config-blocks/*",
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "intechstudio",
          "repo": "grid-editor"
        }
      ],
      "artifactName": "${name}-setup-${version}-${env.MODE}.${ext}",
      "target": [
        "nsis"
      ],
      "icon": "dist-assets/icon.png"
    },
    "linux": {
      "artifactName": "${name}-setup-${version}-${env.MODE}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${name}-setup-${version}-${env.MODE}.${ext}",
      "icon": "dist-assets/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "dist-assets/entitlements.mac.plist",
      "entitlementsInherit": "dist-assets/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "dist-assets/notarize.js"
  },
  "scripts": {
    "e:builder": "cross-env NODE_ENV=production NOTARIZE=true MODE=release electron-builder --publish onTagOrDraft",
    "e:builder:nightly": "cross-env NODE_ENV=production NOTARIZE=true DEBUG=electron-builder MODE=nightly electron-builder --publish onTagOrDraft",
    "e:builder:local": "cross-env NODE_ENV=production MODE=nightly electron-builder --publish never",
    "export": "run-s s:build e:builder",
    "export:nightly": "run-s s:build e:builder:nightly",
    "rebuild": "./node_modules/.bin/electron-rebuild.cmd",
    "export:local": "run-s s:build e:builder:local",
    "s:build": "cross-env NODE_ENV=production vite build",
    "s:build:local": "cross-env NODE_ENV=production vite build",
    "postinstall": "SET DEBUG=electron-builder&& electron-builder install-app-deps",
    "dev": "vite",
    "test": "mocha",
    "electron": "run-s build pure-electron",
    "pure-electron": "electron .",
    "electron-dev": "run-p dev pure-electron-dev",
    "pure-electron-dev": "cross-env NODE_OPTIONS=--max_old_space_size=8198 DEBUG=universal-analytics NODE_ENV=development electron ."
  }
}
